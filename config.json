        "formatcombinedapache": "%h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"",
        "formatcommonapache": "%h %l %u %t \"%r\" %>s %b",
        "format": "{ip} {pr} {mt} {cd} {ur} {sz} {tm}",
        "pages": "file:./example/logs/xamboo-admin-pages.log",
        "errors": "file:./example/logs/xamboo-admin-errors.log",
        "sys": "file:./example/logs/xamboo-admin-sys.log",
        "stats": "discard",
        "rotate": "1d",
        "compress": true
